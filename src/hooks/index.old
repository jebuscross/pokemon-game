import React, { useState } from "react";
import ReactDOM from "react-dom";

const App = () => {
  const [count, setCount] = useState([1]);

  const handleClick = () => {
    count.push(count.length + 1);
    setCount((prevState) => {
      prevState.push(prevState.length + 1);
      return [...prevState];
    });
  };

  return (
    <div>
      <div>{count}</div>
      <div>
        <button onClick={handleClick}>Click</button>
      </div>
    </div>
  );
};
